{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ]
}